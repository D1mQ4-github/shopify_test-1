<h3 class="slider__title">{{ section.settings.title }}</h3>
<div class="slider__slides">
	{% for block in section.blocks %}
  		{{ block }}
  	{% endfor %}
</div>

{% schema %}
  {
    "name": "Slider",
    "tag": "div",
    "class": "slider",
    "settings": [
      {
        "type": "text",
        "id": "title", 
        "label": "Slides title"
      }
    ],
    "blocks": [
		{
          "type": "image",
          "name": "slides",
          "settings": [
            {
              "type": "image_picker",
              "id": "slide",
              "label": "Slide:"
            }
          ]
		}
	]
  }
{% endschema %}

