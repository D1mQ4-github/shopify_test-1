<h3 class="slider__title">{{ section.settings.title }}</h3>

<div class="slider__slides">
	{%- for block in section.blocks -%}
  		<img src="{{- block.settings.image | img_url: '500x500' -}}">
  	{%- endfor -%}
</div>

{% for block in section.blocks %}
	{% if block.type == 'slide' %}
<div class="slider__slides">
	{%- for block in section.blocks -%}
  		<img src="{{- block.settings.slide | img_url: '500x500' -}}">
  	{%- endfor -%}
</div>
	{% endif %}
{% endfor %}

{% schema %}
  {
    "name": "Slider",
    "tag": "div",
    "class": "slider",
    "settings": [
      {
        "type": "text",
        "id": "title", 
        "label": "Slides title"
      }
    ],
    "blocks": [
		{
          "type": "image",
          "name": "slides",
          "settings": [
            {
              "type": "image_picker",
              "id": "slide",
              "label": "Slide:"
            }
          ]
		},
       {
         "name": "Slide",
         "type": "slide",
         "settings": [
           {
             "type": "image_picker",
             "id": "image",
             "label": "Image"
           }
         ]
       }
	]
  }
{% endschema %}

